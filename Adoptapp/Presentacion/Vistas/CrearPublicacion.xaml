        <Button x:Name="btn_seleccionar" Content="Seleccionar" HorizontalAlignment="Left" Margin="132,359,0,0" VerticalAlignment="Top" Width="75" Click="btn_seleccionar_Click" Background="#FFA92770" Foreground="White"/>
        <Label x:Name="lbl_ruta" Content="" HorizontalAlignment="Left" Margin="212,355,0,0" VerticalAlignment="Top" Width="389" Height="26"/>
