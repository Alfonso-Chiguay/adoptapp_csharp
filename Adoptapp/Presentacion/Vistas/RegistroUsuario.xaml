<Window x:Class="Presentacion.Vistas.RegistroUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion.Vistas"
        mc:Ignorable="d"
        Title="Adoptapp | Registro de usuario" Height="598" Width="520" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,2,0">
        <Label Content="Registro de nuevo usuario" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontFamily="Sitka Display" FontSize="30"/>
        <Label Content="Nombre completo" HorizontalAlignment="Left" Margin="158,66,0,0" VerticalAlignment="Top" FontFamily="Sitka Display" FontSize="16"/>
        <TextBox x:Name="txt_nombre_completo" HorizontalAlignment="Left" Height="23" Margin="161,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="315" FontFamily="Yu Gothic" FontSize="14"/>
        <Label Content="RUT" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" FontFamily="Sitka Display" FontSize="16"/>
        <TextBox x:Name="txt_rut" HorizontalAlignment="Left" Height="23" Margin="14,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" FontFamily="Yu Gothic" FontSize="13"/>
        <TextBox x:Name="txt_dv" HorizontalAlignment="Left" Height="23" Margin="108,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="17" FontFamily="Yu Gothic" FontSize="13"/>
        <Label Content="-" HorizontalAlignment="Left" Margin="93,89,0,0" VerticalAlignment="Top" FontFamily="Sitka Display" FontSize="16"/>
        <Label Content="Correo electrónico" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" FontFamily="Sitka Display" FontSize="16"/>
        <TextBox x:Name="txt_email" HorizontalAlignment="Left" Height="23" Margin="13,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" FontFamily="Yu Gothic" FontSize="14"/>
        <Label Content="Teléfono" HorizontalAlignment="Left" Margin="261,120,0,0" VerticalAlignment="Top" FontFamily="Sitka Display" FontSize="16"/>
        <TextBox x:Name="txt_telefono" HorizontalAlignment="Left" Height="23" Margin="264,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" FontFamily="Yu Gothic" FontSize="14"/>
        <Label Content="Nombre de usuario" HorizontalAlignment="Left" Margin="155,289,0,0" VerticalAlignment="Top" FontFamily="Sitka Display" FontSize="16"/>
        <TextBox x:Name="txt_usuario" HorizontalAlignment="Left" Height="23" Margin="102,319,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" FontFamily="Yu Gothic" FontSize="14"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="180,347,0,0" VerticalAlignment="Top" FontFamily="Sitka Display" FontSize="16"/>
        <PasswordBox x:Name="txt_password" HorizontalAlignment="Left" Margin="102,377,0,0" VerticalAlignment="Top" Width="238" Height="23"/>
        <Label Content="Confirme su contraseña" HorizontalAlignment="Left" Margin="145,405,0,0" VerticalAlignment="Top" FontFamily="Sitka Display" FontSize="16"/>
        <PasswordBox x:Name="txt_password2" HorizontalAlignment="Left" Margin="102,436,0,0" VerticalAlignment="Top" Width="238" Height="23"/>
        <Button x:Name="btn_registrarse" Content="Registarse" HorizontalAlignment="Left" Margin="142,474,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btn_cancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="235,474,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Región" HorizontalAlignment="Left" Margin="11,174,0,0" VerticalAlignment="Top" FontFamily="Sitka Display" FontSize="16"/>
        <ComboBox x:Name="cb_region" HorizontalAlignment="Left" Margin="14,200,0,0" VerticalAlignment="Top" Width="189"/>
        <Label Content="Comuna" HorizontalAlignment="Left" Margin="235,174,0,0" VerticalAlignment="Top" FontFamily="Sitka Display" FontSize="16"/>
        <ComboBox x:Name="cb_comuna" HorizontalAlignment="Left" Margin="238,200,0,0" VerticalAlignment="Top" Width="189"/>
        <CheckBox Content="Actualmente, ¿tienes mascota(s)?" HorizontalAlignment="Left" Margin="108,242,0,0" VerticalAlignment="Top" Height="17" FontFamily="Sitka Display" FontSize="16"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="3" Margin="15,273,0,0" Stroke="Black" VerticalAlignment="Top" Width="468" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>

    </Grid>
</Window>
